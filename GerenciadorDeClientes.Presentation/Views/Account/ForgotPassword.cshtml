@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="text-center text-white">

    <h4>Esqueci minha senha</h4>
    <p>Informe o e-mail do usuário para recuperação de senha.</p>
    <hr />

</div>

<form class="text-white">

    <div class="mb-2">
        <label>E-mail de acesso:</label>
        <input type="text" class="form-control" placeholder="EX: vagner@gmail.com" />
    </div>

    <div class="mb-2 d-grid">
        <input type="submit" value="Recuperar senha" class="btn btn-light" />

    </div>

    <div class="mb-2 text-center">
        
        <a href="/Account/Login" class="text-white">Voltar a pagina inicial</a>
        
    </div>


</form>

